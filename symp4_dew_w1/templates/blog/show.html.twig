
{% extends 'base.html.twig' %}

{% block body %}

        <articles>
            <h4>{{ article.title }}</h4>
            
            <div class="metadata"> Ecrit le {{ article.createdAt | date ('d/m/Y')}} a {{ article.createdAt | date('H:i') }} dans la categorie  {{ article.category.title }} </div>
            <div class="content">
                    <img src="{{ article.image }}">
                    {{ article.content |raw }}
             </div>          
        </articles>
        
        
        <section id="commentaires">
            <h3>{{article.comments | length}} Les commentaires</h3>
        	{% for comment in article.comments %}
        		<div class="comment">
        			<div class="row">
        				<div class="col3">
        				    {{ comment.author }} (<small> {{ comment.createdAt | date('d/m/Y ï¿½ H:i') }}</small>)
        				</div>
        				<div class="col">
        				    {{ comment.content |raw }}
        				</div>
        			</div>
        		</div>
        {% endfor %}
            {{ form_start(commentForm) }}
            {{form_row(commentForm.author, {'attr':{'placeholder': "votre nom"}})}}
            {{form_row(commentForm.content, {'attr':{'placeholder': "votre commentaire"} })}}
            <button type="submit" class"btn btn-success"> Commentez </button>
            {{ form_end(commentForm) }}
        </section>   
{% endblock %}